
set $terminal xterm
set $browser chromium
set $mod Mod4
floating_modifier $mod

font pango:monospace 12

exec xrdb ~/.Xresources
exec xcompmgr
exec xwallpaper --zoom ~/.wallpaper

set_from_resource $black i3wm.color0 #111111
set_from_resource $red i3wm.color1 #aa1111
set_from_resource $green i3wm.color2 #11aa11
set_from_resource $yellow i3wm.color3 #aaaa11
set_from_resource $blue i3wm.color4 #1111aa
set_from_resource $magenta i3wm.color5 #aa11aa
set_from_resource $cyan i3wm.color6 #11aaaa
set_from_resource $white i3wm.color7 #aaaaaa

set_from_resource $brightblack i3wm.color8 #111111
set_from_resource $brightred i3wm.color9 #aa1111
set_from_resource $brightgreen i3wm.color10 #11aa11
set_from_resource $brightyellow i3wm.color11 #aaaa11
set_from_resource $brightblue i3wm.color12 #1111aa
set_from_resource $brightmagenta i3wm.color13 #aa11aa
set_from_resource $brightcyan i3wm.color14 #11aaaa
set_from_resource $brightwhite i3wm.color15 #aaaaaa

# class                 border        backgr. text    indicator       child_border
client.focused          $blue         $blue   $black  $yellow         $cyan
client.focused_inactive $brightblack  $black  $white  $brightblack    $brightblack
client.unfocused        $brightblack  $black  $white  $brightblack    $brightblack
client.urgent           $red          $red    $white  $red            $red
client.placeholder      $black        $black  $white  $black          $black
client.background       $white

bar {
    status_command i3-panel
    position top
    colors {
        background $black
        statusline $white

        separator $red
        focused_workspace  $blue $blue $black
        active_workspace   $black $black $white
        inactive_workspace $black $black $white
        urgent_workspace   $red $red $black
        binding_mode       $red $red $black
    }
}

for_window [class="^.*"] border pixel 2
gaps inner 8
gaps outer 0

for_window [class="XTerm"] exec transset -a 0.9

set $ws1 " 1 "
set $ws2 " 2 "
set $ws3 " 3 "
set $ws4 " 4 "
set $ws5 " 5 "
set $ws6 " 6 "
set $ws7 " 7 "
set $ws8 " 8 "
set $ws9 " 9 "

bindsym Print exec screen
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

bindsym $mod+Return exec $terminal
bindsym $mod+Control+Return exec $terminal -e tmux new-session -A -s default

bindsym $mod+Control+u exec DMENU="rofi -dmenu" dmenu_unicode
bindsym $mod+Control+e exec DMENU="rofi -dmenu" dmenu_emoji
bindsym $mod+Control+k exec DMENU="rofi -dmenu" dmenu_kaomoji
bindsym $mod+Control+b exec $browser
bindsym $mod+Control+t exec telegram-desktop
bindsym $mod+Control+h exec $terminal -e htop
bindsym $mod+Control+c exec $terminal -e tty-clock -csC4
bindsym $mod+Control+q exec $terminal -e qalc

bindsym $mod+w kill

bindsym $mod+p exec --no-startup-id rofi -show run
bindsym $mod+Shift+p exec --no-startup-id rofi -show drun

bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

bindsym $mod+e split h
bindsym $mod+q split v

bindsym $mod+a focus parent
bindsym $mod+d focus child

bindsym $mod+m fullscreen toggle
bindsym $mod+f focus mode_toggle
bindsym $mod+Shift+f floating toggle

bindsym $mod+Shift+r restart
bindsym $mod+Shift+q exit

bindsym $mod+r mode "resize"
mode "resize" {
        bindsym h resize shrink width 10 px or 10 ppt
        bindsym j resize grow height 10 px or 10 ppt
        bindsym k resize shrink height 10 px or 10 ppt
        bindsym l resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9

bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9

