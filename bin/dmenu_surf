#!/bin/bash
[ -z "$BROWSER" ] && BROWSER=surf
[ -z "$DMENU" ] && DMENU=dmenu

[ -z "$DIR_NAME" ] && DIR_NAME=~/.cache
[ -z "$FILE_NAME" ] && FILE_NAME=dmenu_url

mkdir -p $DIR_NAME
[ -f $DIR_NAME/$FILE_NAME ] || echo -e "suckless.org\n" > $DIR_NAME/$FILE_NAME

url="$(sort -ur $DIR_NAME/$FILE_NAME | sed '/^$/d' | $DMENU -p url)"
echo "$url" >> $DIR_NAME/$FILE_NAME

[ -z "$url" ] || $BROWSER "$url"

