#!/bin/bash

back="$(xrdb -query | grep -m1 color0: | awk '{print $2}')"
fore="$(xrdb -query | grep -m1 color4: | awk '{print $2}')"

[ -z "$back" ] && back="#000000"
[ -z "$fore" ] && fore="#00aaff"

rofi "$@" -dmenu \
	-color-window "$back, $fore, $fore" \
	-color-normal "$back, $fore, $back, $fore, $back" \
	-color-active "$back, $back, $back, $fore, $back" \
	-color-urgent "$back, $back, $back, $fore, $back" \

