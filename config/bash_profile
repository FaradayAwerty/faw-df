#!/bin/bash

source ~/.bashrc

export EDITOR=nvim
export TERMINAL_BROWSER=w3m
export FILE_MANAGER=rover
export DOWNLOADER=aria2c
export MUSIC_PLAYER=cmus
export NEWS_READER=newsboat
export SOUND_MIXER=pulsemixer
export YOUTUBE_VIEWER=pipe-viewer
export PAGER=less

export TERMINAL=st
export BROWSER=chromium
export OPEN=xdg-open
export DMENU=dmenu
export RUNMENU=dmenu_run
export MEDIA_PLAYER=mpv
export IMAGE_VIEWER=sxiv

export _JAVA_AWT_WM_NONREPARENTING=1 # fix broken java apps

export GOPATH=~/.go
mkdir -p $GOPATH
mkdir -p $GOPATH/bin
mkdir -p $GOPATH/src
mkdir -p $GOPATH/pkg

if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

if [ -d "$GOPATH/bin" ] ; then
    PATH="$GOPATH/bin:$PATH"
fi

if [ -f ~/.xinitrc ] && [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]] && [[ -z "$TMUX" ]]; then exec startx; fi

