#!/bin/bash

source ~/.bashrc

if [ -f ~/.colorscheme.sh ]; then
	source ~/.colorscheme.sh
else
	# default colorscheme
	export X_COLOR_0="#2b303b"
	export X_COLOR_1="#bf616a"
	export X_COLOR_2="#a3be8c"
	export X_COLOR_3="#ebcb8b"
	export X_COLOR_4="#8fa1b3"
	export X_COLOR_5="#b48ead"
	export X_COLOR_6="#96b5b4"
	export X_COLOR_7="#c0c5ce"
	export X_COLOR_8="#65737e"
	export X_COLOR_9="#bf616a"
	export X_COLOR_10="#a3be8c"
	export X_COLOR_11="#ebcb8b"
	export X_COLOR_12="#8fa1b3"
	export X_COLOR_13="#b48ead"
	export X_COLOR_14="#96b5b4"
	export X_COLOR_15="#eff1f5"
fi

export EDITOR=nvim
export PAGER=w3m
export TERMINAL_BROWSER=w3m
export YOUTUBE_VIEWER=pipe-viewer

export TERMINAL=uxterm
export BROWSER=chromium
export DMENU=rofi_xrdb
export RUNMENU=dmenu_launch
export MEDIA_PLAYER=mpv

export _JAVA_AWT_WM_NONREPARENTING=1 # fix broken java apps in dwm

export DEVPATH=~/dev
export GOPATH=$DEVPATH/lang_go
export CPATH=$DEVPATH/lang_c
export CPATH=$DEVPATH/lang_cpp
export PYPATH=$DEVPATH/lang_py
export LUAPATH=$DEVPATH/lang_lua
export JAVAPATH=$DEVPATH/lang_java

mkdir -p $CPATH
mkdir -p $PYPATH
mkdir -p $LUAPATH
mkdir -p $JAVAPATH

mkdir -p $GOPATH
mkdir -p $GOPATH/bin
mkdir -p $GOPATH/src
mkdir -p $GOPATH/pkg

if [ -d "$HOME/.local/bin" ] ; then
    PATH="$HOME/.local/bin:$PATH"
fi

if [ -d "$GOPATH/bin" ] ; then
    PATH="$GOPATH/bin:$PATH"
fi

if [ -f ~/.xinitrc ] && [[ -z $DISPLAY ]] && [[ $(tty) = /dev/tty1 ]] && [[ -z "$TMUX" ]]; then
	exec startx
fi

