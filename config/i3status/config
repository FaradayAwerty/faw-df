general {
    colors = false
    output_format = "i3bar"
    interval = 5
}

#order += "wireless _first_"
#order += "ethernet _first_"
#order += "cpu_usage"
order += "cpu_temperature 0"
order += "battery all"
order += "volume master"
order += "tztime local"

wireless _first_ {
    format_up = "W:%quality %essid %ip"
    format_down = "W: down"
}

ethernet _first_ {
    format_up = "E: %ip (%speed)"
    format_down = "E: down"
}

battery all {
    integer_battery_capacity = true
    last_full_capacity = true

    low_threshold = 30
    threshold_type = percentage

    format = "BAT %status %percentage (%emptytime %consumption)"
}

tztime local {
    format = "%b %d %a %H:%M"
}

volume master {
    format = "VOL %volume"
    format_muted = "VOL muted (%volume)"
    device = "default"
    mixer = "Master"
    mixer_idx = 0
}

cpu_usage {
    format = "CPU %usage"
    max_threshold = 75
    format_above_threshold = "CPU %usage"
}

cpu_temperature 0 {
    format = "TEMP %degrees °C"
    max_threshold = 60
    format_above_threshold = "[!] TEMP %degrees °C"
}
