# interpreter for shell commands
set shell /bin/bash
set shellopts '-eu'

# leave some space at the top and the bottom of the screen
set scrolloff 10

# set internal field separator (IFS)
set ifs "\n"

set relativenumber true

set ratios 1:2:2

map <enter> open
cmd open shell

map w
map i

map gg :top
map G :bottom

map gh :cd ~

map e $$EDITOR $f
map oi $$IMAGE_VIEWER $fx
map od $$DOCUMENT_VIEWER $fx
map om ${{
	if [ "$MEDIA_PLAYER" = "mpv" ]
	then
		mpv --no-audio-display $fx
	else
		$MEDIA_PLAYER $fx
	fi
}}

# tmux
map tev $tmux split-window -v $EDITOR $f
map teh $tmux split-window -h $EDITOR $f

map x $$f
map X !$f

map D :delete

