# enable transparency if there's a wallpaper
[ -f ~/.wallpaper ] && xcompmgr &

# set keyboard layout
setxkbmap -layout us,ru -option grp:win_space_toggle

# load xresources
xrdb ~/.Xresources

# set colorscheme
wal -R -n

# set wallpaper
[ -f ~/.wallpaper ] && xwallpaper --stretch ~/.wallpaper

# dwm status
while true
do
	xsetroot -name " $(panel_bat)   $(panel_temp)   $(panel_mem)   $(panel_date) "
	sleep 20s
done &

# start window manager
exec dwm

