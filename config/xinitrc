# enable transparency
[ -f ~/.wallpaper ] && xcompmgr &

# set keyboard layout
setxkbmap -layout us,ru -option grp:alt_shift_toggle

# set wallpaper
[ -f ~/.wallpaper ] && xwallpaper --stretch ~/.wallpaper
[ -f ~/.wallpaper ] || xsetroot -solid "#060608"

# dwm status
while true
do
	xsetroot -name " $(date +'%a %b %d %H:%M') "
	sleep 20s
done &

# start window manager
exec dwm

