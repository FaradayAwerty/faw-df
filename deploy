#! /bin/bash
cd config

mkdir -p ~/.config/lf
mkdir -p ~/.config/htop
mkdir -p ~/.config/nvim
mkdir -p ~/.newsboat
mkdir -p ~/.w3m

ln -snf $(realpath bashrc) ~/.bashrc
ln -snf $(realpath bash_profile) ~/.bash_profile
ln -snf $(realpath tmux.conf) ~/.tmux.conf
ln -snf $(realpath htop/htoprc) ~/.config/htop/htoprc
ln -snf $(realpath lf/lfrc) ~/.config/lf/lfrc
ln -snf $(realpath newsboat/config) ~/.newsboat/config
ln -snf $(realpath w3m/config) ~/.w3m/config
ln -snf $(realpath w3m/keymap) ~/.w3m/keymap

ln -snf $(realpath neovim/init.vim) ~/.config/nvim/init.vim
sh -c 'curl -fLo "${XDG_DATA_HOME:-$HOME/.local/share}"/nvim/site/autoload/plug.vim --create-dirs \
       https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim'

