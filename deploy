#! /bin/bash

cd config


ln -snf $(realpath tmux) ~/.tmux.conf
ln -snf $(realpath bashrc) ~/.bashrc
ln -snf $(realpath bash_profile) ~/.bash_profile


mkdir -p ~/.w3m
ln -snf $(realpath w3m/config) ~/.w3m/config
ln -snf $(realpath w3m/keymap) ~/.w3m/keymap


mkdir -p ~/.newsboat
ln -snf $(realpath newsboat/config) ~/.newsboat/config


#mkdir -p ~/.config/nvim
#ln -snf $(realpath neovim/init.vim) ~/.config/nvim/init.vim
#./neovim/install_vimplug


mkdir -p ~/.config/kak/autoload/
ln -snf $(realpath kakoune/kakrc) ~/.config/kak/kakrc
cp kakoune/autoload/* ~/.config/kak/autoload/

