	Mod4+Control+p
"DMENU='dmenu -fn Hack:size=12 -nb black -nf white -sb indigo -sf white' faw_dmenu_emoji"
	Mod4+Control+e
"DMENU='dmenu -fn Hack:size=12 -nb black -nf white -sb indigo -sf white' faw_dmenu_unicode"
	Mod4+Control+u
"DMENU='dmenu -fn Hack:size=12 -nb black -nf white -sb indigo -sf white' faw_dmenu_resolution"
