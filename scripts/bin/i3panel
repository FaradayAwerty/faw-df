#!/usr/bin/env sh

echo '{ "version": 1 }'

# Begin the endless array.
echo '['

# We send an empty first array of blocks to make the loop simpler:
echo '[]'

# Now send blocks with information forever:
while :;
do
	echo ",[{\"name\":\"time\",\"full_text\":\" $(panel_date) \"}, \
		{\"name\":\"mem\",\"full_text\":\" $(panel_mem) \"}, \
		{\"name\":\"bat\",\"full_text\":\" $(panel_bat) \"}, \
		{\"name\":\"temp\",\"full_text\":\" $(panel_temp) \"}]"
	sleep 40s
done

