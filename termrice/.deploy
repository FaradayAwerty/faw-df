
mkdir -p ~/.newsboat

# load config files
ln -snf $(realpath bash_profile) ~/.bash_profile
ln -snf $(realpath bashrc) ~/.bashrc
ln -snf $(realpath tmux) ~/.tmux.conf
ln -snf $(realpath vimrc) ~/.vimrc
ln -snf $(realpath newsboat_config) ~/.newsboat/config

# install vim-plug
curl -fLo ~/.vim/autoload/plug.vim --create-dirs https://raw.githubusercontent.com/junegunn/vim-plug/master/plug.vim

# deploy scripts
mkdir -p ~/.local/bin
for i in $(ls scripts/bin)
do
	ln -snf $(realpath scripts/bin/$i) ~/.local/bin/$i
done

