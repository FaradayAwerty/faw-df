
mkdir -p ~/.config/kak/autoload
mkdir -p ~/.local/bin

cp -r kak/autoload/* ~/.config/kak/autoload/

ln -snf $(realpath kak/kakrc) ~/.config/kak/kakrc
ln -snf $(realpath bash_profile) ~/.bash_profile
ln -snf $(realpath bashrc) ~/.bashrc
ln -snf $(realpath tmux.conf) ~/.tmux.conf

for i in $(ls scripts/bin); do
	ln -snf $(realpath scripts/bin/$i) ~/.local/bin/$i
done

